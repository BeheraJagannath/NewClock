    </style>
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/fab</item>
    </style>
    <style name="fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">100%</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>

    </style>

    <style name="ThemeOverlay.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:fontFamily">@font/gothambook</item>
    </style>


    <style name="TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/tab_indicator_color</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="materialClockStyle">@style/TimePicker.Clock</item>
        <item name="materialButtonOutlinedStyle">@style/TimePicker.Button</item>
        <item name="chipStyle">@style/TimePicker.Chip</item>
        <item name="imageButtonStyle">@style/TimePicker.ImageButton</item>
        <!--        <item name="android:background">@color/tab_background</item>-->

    </style>

    <style name="TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/clock_bg</item>
        <item name="clockHandColor">@color/tab_indicator_color</item>
        <item name="clockNumberTextColor">@color/white</item>

    </style>

    <style name="TimePicker.Button" parent="Widget.MaterialComponents.TimePicker.Button">
        <!--        <item name="backgroundTint">@color/tab_indicator_color</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/tab_indicator_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TimePicker.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <!--        <item name="chipBackgroundColor">@color/tab_indicator_color</item>-->
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TimePicker.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="iconTint">@color/tab_text_color</item>
    </style>


