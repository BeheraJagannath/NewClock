    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/tab_indicator_color</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/unselect_color</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/unselect_color</item>
    </style>


    <style name="textinputed" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
