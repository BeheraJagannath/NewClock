<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_custom_interval_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_custom_interval_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingTop="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_custom_interval_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/tab_indicator_color"
            app:hintTextColor="@color/tab_indicator_color"
            android:hint="@string/label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialog_custom_interval_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="20"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:theme="@style/textinputed"
                android:textSize="@dimen/normal_text_size" />

        </com.google.android.material.textfield.TextInputLayout>

<!--        <com.simplemobiletools.commons.views.MyTextInputLayout-->
<!--            android:id="@+id/dialog_custom_interval_hint"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--            app:boxStrokeColor="@color/tab_indicator_color"-->
<!--            android:hint="@string/value">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/dialog_custom_interval_value"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:digits="0123456789"-->
<!--                android:inputType="number"-->
<!--                android:maxLength="5"-->
<!--                android:textCursorDrawable="@null"-->
<!--                android:textSize="@dimen/bigger_text_size" />-->

<!--        </com.simplemobiletools.commons.views.MyTextInputLayout>-->

        <RadioGroup
            android:id="@+id/dialog_radio_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_margin">

            <RadioButton
                android:id="@+id/dialog_radio_seconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambook"
                android:textColor="@color/text_color"
                android:paddingBottom="@dimen/activity_margin"
                android:theme="@style/Radio"
                android:paddingTop="@dimen/activity_margin"
                android:text="@string/seconds_raw" />

            <RadioButton
                android:id="@+id/dialog_radio_minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambook"
                android:textColor="@color/text_color"
                android:paddingBottom="@dimen/activity_margin"
                android:theme="@style/Radio"
                android:paddingTop="@dimen/activity_margin"
                android:text="@string/minutes_raw" />

            <RadioButton
                android:id="@+id/dialog_radio_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambook"
                android:textColor="@color/text_color"
                android:paddingBottom="@dimen/activity_margin"
                android:theme="@style/Radio"
                android:paddingTop="@dimen/activity_margin"
                android:text="@string/hours_raw" />

            <RadioButton
                android:id="@+id/dialog_radio_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambook"
                android:textColor="@color/text_color"
                android:paddingBottom="@dimen/activity_margin"
                android:theme="@style/Radio"
                android:paddingTop="@dimen/activity_margin"
                android:text="@string/days_raw" />

        </RadioGroup>
    </LinearLayout>
</ScrollView>
